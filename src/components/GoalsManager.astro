<style>
    /* Overlay fade */
    #edit-goal-section {
        transition: opacity 0.15s ease-out;
        background-color: rgba(var(--color-primary-bg), 0.35);
    }

    #edit-goal-section.show {
        opacity: 1;
        pointer-events: auto;
    }

    /* Modal slide */
    #edit-goal-section .edit-goal-modal {
        transform: translateY(-100%);
        transition: transform 0.15s ease-out;
        border: 1px solid rgb(var(--color-border-color));
        box-shadow: none;
    }

    #edit-goal-section.show .edit-goal-modal {
        transform: translateY(0);
    }

    /* Input focus â€“ subtle, no glow */
    #edit-goal-input {
        text-transform: capitalize;
        outline: none;
        transition: border-color 0.12s ease;
    }

    #edit-goal-input:focus {
    }
</style>

<!-- Goal Context Menu (Right-click) -->
<div
    id="edit-goal-section"
    class="fixed inset-0 flex justify-center items-start z-[10000] opacity-0 pointer-events-none"
>
    <div
        class="edit-goal-modal bg-[rgb(var(--color-secondary-bg))]
               border-[rgb(var(--color-border-color))]
               rounded-sm p-2 flex flex-row items-center gap-2
               w-[90%] max-w-xl mt-4 shadow-none
               dark:bg-[rgb(var(--color-secondary-bg))]
               dark:border-[rgb(var(--color-border-color))]"
    >
        <label
            for="edit-goal-input"
            class="text-[rgb(var(--color-text-secondary))] text-sm flex flex-col gap-1 flex-grow
                   dark:text-[rgb(var(--color-text-secondary))]"
        >
            <input
                type="text"
                id="edit-goal-input"
                placeholder="Edit your goal title"
                class="bg-[rgb(var(--color-primary-bg))]
                       border border-[rgb(var(--color-border-color))]
                       rounded-sm px-2 py-1.5
                       text-[rgb(var(--color-text-primary))]
                       text-base w-full box-border
                       focus:outline-none
                       dark:bg-[rgb(var(--color-primary-bg))]
                       dark:border-[rgb(var(--color-border-color))]
                       dark:text-[rgb(var(--color-text-primary))]"
            />
        </label>

        <div class="button-group flex flex-row gap-1 items-center ml-auto">
            <button
                id="edit-goal-action-button"
                class="bg-[rgb(var(--color-accent))]
                       text-[rgb(var(--color-primary-bg))]
                       px-2.5 py-1.5 rounded-sm cursor-pointer
                       font-semibold text-xs
                       transition-colors duration-200
                       hover:bg-[rgb(var(--color-text-secondary))]
                       dark:bg-[rgb(var(--color-accent))]
                       dark:text-[rgb(var(--color-primary-bg))]
                       dark:hover:bg-[rgb(var(--color-text-secondary))]"
            ></button>

            <button
                id="edit-goal-delete-button"
                class="delete-button bg-[rgb(var(--color-border-color))]
                       text-[rgb(var(--color-text-primary))]
                       px-2.5 py-1.5 rounded-sm cursor-pointer
                       font-semibold text-xs
                       transition-colors duration-200
                       hover:bg-red-500 hover:text-white
                       dark:bg-[rgb(var(--color-border-color))]
                       dark:text-[rgb(var(--color-text-primary))]"
            >
                Delete
            </button>
        </div>
    </div>
</div>

<script type="module" src="/scripts/goalsManager.js"></script>
