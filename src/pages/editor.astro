---
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Configuration Editor</title>
    <!-- Tailwind CSS CDN for styling -->
    <style>
        /* Reverted to a simpler, basic design as requested */
        body { font-family: sans-serif; }
    </style>
</head>
<body class="bg-gray-100 h-screen flex flex-col overflow-hidden">

    <header class="bg-white p-4 flex items-center justify-between shadow-md">
        <div class="flex items-center space-x-2">
            <!-- Simplified Back Button -->
            <button id="backButton" class="text-gray-600 hover:text-gray-900 hidden p-1 font-bold">
                &larr; Back
            </button>
            <h1 id="appTitle" class="text-xl font-bold text-gray-800">Event Configuration Editor</h1>
        </div>
        
        <div class="flex space-x-2">
            <button id="uploadOption" class="text-sm font-semibold py-1 px-3 border border-gray-300 rounded-md bg-white hover:bg-gray-100 transition">
                Upload Config
            </button>
            <button id="downloadOption" class="text-sm font-semibold py-1 px-3 border border-gray-300 rounded-md bg-white hover:bg-gray-100 transition">
                Download Config
            </button>
        </div>
        <input type="file" id="fileInput" accept=".json" class="hidden">
    </header>

    <div class="flex flex-col-reverse md:flex-row flex-1 overflow-hidden"> <!-- Main two-column container -->

        <!-- Left Column: User Interaction -->
        <div id="leftColumn" class="md:w-1/3 w-full flex flex-col overflow-hidden border-r bg-white">
            <!-- Event Selection Page -->
            <div id="eventSelectionPage" class="p-4 flex-grow flex flex-col justify-between overflow-y-auto">
                <div>
                    <h2 class="text-xl font-semibold mb-4">Choose Event Type</h2>
                    <div class="space-y-3">
                        <label class="block cursor-pointer p-3 border border-gray-300 hover:bg-gray-50 rounded transition">
                            <input type="radio" name="selectEventType" value="default_event_data" checked> Default / Offline Event
                        </label>
                        <label class="block cursor-pointer p-3 border border-gray-300 hover:bg-gray-50 rounded transition">
                            <input type="radio" name="selectEventType" value="inactivity_event_data"> Inactivity Event
                        </label>
                        <label class="block cursor-pointer p-3 border border-gray-300 hover:bg-gray-50 rounded transition">
                            <input type="radio" name="selectEventType" value="random_tip_event_data"> Random Tips Event
                        </label>
                        <label class="block cursor-pointer p-3 border border-gray-300 hover:bg-gray-50 rounded transition">
                            <input type="radio" name="selectEventType" value="time_of_day_event_data"> Time of Day Event
                        </label>
                    </div>
                </div>
                <button id="goToEditorBtn" class="bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition duration-150 mt-4">
                    Configure Selected Event
                </button>
            </div>

            <!-- Configuration Editor Page (initially hidden) -->
            <div id="configEditorPage" class="hidden p-4 flex-grow flex flex-col overflow-y-auto">
                
                <!-- Time of Day Selector (Hidden by default) -->
                <section id="timeOfDaySelectorSection" class="mb-4 border-b pb-4 hidden">
                    <h2 class="text-lg font-semibold mb-2 text-blue-700">Select Time Period</h2>
                    <select id="timePeriodSelect" class="w-full p-2 border border-gray-300 rounded text-sm focus:ring-blue-500 focus:border-blue-500">
                        <option value="morning">Morning</option>
                        <option value="afternoon">Afternoon</option>
                        <option value="evening">Evening</option>
                        <option value="night">Night</option>
                    </select>
                </section>

                <!-- Message Sets Section -->
                <section class="flex-grow flex flex-col">
                    <h2 class="text-lg font-semibold mb-3 flex justify-between items-center text-blue-700">
                        Message Sets
                        <button id="addMessageSetBtn" class="bg-blue-500 text-white font-bold py-1 px-2 text-xs rounded hover:bg-blue-600 transition duration-150">
                            + Add Set
                        </button>
                    </h2>
                    <div id="messageSetsContainer" class="space-y-4 pb-4">
                        <!-- Message sets will be dynamically added here -->
                    </div>
                    <p id="noMessageSetsMessage" class="text-center text-gray-500 italic text-sm py-4 hidden">
                        Click 'Add Set' to create your first message configuration.
                    </p>
                </section>
            </div>
        </div>

        <!-- Right Column: Dynamic Display / Preview -->
        <div class="md:w-2/3 w-full flex flex-col justify-center p-4 bg-gray-100">
            
            <!-- Browser Container -->
            <div id="rightColumnContainer" class="relative w-full h-full md:aspect-video flex items-center justify-center">
                <div id="browserContainer"
                    class="w-full h-full rounded shadow-lg overflow-hidden flex flex-col border border-gray-300 bg-white">
                    
                    <!-- Top bar -->
                    <div id="browserHeader"
                        class="flex items-center gap-3 px-4 py-2 border-b bg-gray-200">
                        <div class="flex gap-2 items-center">
                            <span class="w-2 h-2 rounded-full bg-red-500"></span>
                            <span class="w-2 h-2 rounded-full bg-yellow-400"></span>
                            <span class="w-2 h-2 rounded-full bg-green-500"></span>
                        </div>
                        <div id="addressBar"
                            class="flex-1 mx-4 rounded-full border px-3 py-0.5 text-xs truncate bg-white text-gray-700 border-gray-300">
                            https://event-config-preview.com/app
                        </div>
                    </div>

                    <!-- Content area -->
                    <div id="browserContent"
                        class="p-4 flex-grow relative overflow-y-auto">
                        <div id="rightColumnContent"
                            class="absolute inset-0 flex flex-col items-center justify-center p-4">
                            <div class="text-lg font-bold mb-2">Event Configuration Preview</div>
                            <div class="text-gray-500 text-center text-sm">
                                Select an event and configure a message set to see the live preview here.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Message Box -->
    <div id="messageBox" class="fixed top-4 right-4 p-3 border border-gray-300 rounded bg-white text-gray-800 z-50 text-sm shadow-md hidden"></div>

    <script>
        // --- DOM Elements ---
        const messageSetsContainer = document.getElementById('messageSetsContainer');
        const addMessageSetBtn = document.getElementById('addMessageSetBtn');
        const messageBox = document.getElementById('messageBox');
        const eventSelectionPage = document.getElementById('eventSelectionPage');
        const configEditorPage = document.getElementById('configEditorPage');
        const goToEditorBtn = document.getElementById('goToEditorBtn');
        const backButton = document.getElementById('backButton');
        const appTitle = document.getElementById('appTitle');
        const selectEventTypeRadios = document.querySelectorAll('input[name="selectEventType"]');
        const rightColumnContent = document.getElementById('rightColumnContent');
        const downloadOption = document.getElementById('downloadOption');
        const uploadOption = document.getElementById('uploadOption');
        const fileInput = document.getElementById('fileInput');
        const noMessageSetsMessage = document.getElementById('noMessageSetsMessage');
        const timeOfDaySelectorSection = document.getElementById('timeOfDaySelectorSection');
        const timePeriodSelect = document.getElementById('timePeriodSelect');

        // --- State ---
        
        // This will hold different structures depending on the event type:
        // For standard events: Array<Item>
        // For Time of Day: { morning: [], afternoon: [], evening: [], night: [] }
        let currentConfigData = []; 

        // Tracks the currently selected LocalStorage Key
        let currentSelectedKey = "default_event_data";
        
        // Tracks the time period for TimeOfDay events ('morning', 'afternoon', etc.)
        let currentTimePeriod = "morning";

        const PLACEHOLDER_IMAGE_URL = 'https://placehold.co/150x100/3b82f6/FFFFFF?text=No+Image';

        // --- Constants ---
        const KEY_TIME_OF_DAY = "time_of_day_event_data";

        // --- Utility Functions ---

        function showMessage(message, type = 'info') {
            let bgColor = 'bg-white', borderColor = 'border-gray-300', textColor = 'text-gray-800';
            if (type === 'success') {
                bgColor = 'bg-green-100'; borderColor = 'border-green-400'; textColor = 'text-green-800';
            } else if (type === 'error') {
                bgColor = 'bg-red-100'; borderColor = 'border-red-400'; textColor = 'text-red-800';
            } else if (type === 'info') {
                 bgColor = 'bg-blue-100'; borderColor = 'border-blue-400'; textColor = 'text-blue-800';
            }
            
            messageBox.textContent = message;
            messageBox.className = `fixed top-4 right-4 p-3 border rounded z-50 text-sm shadow-md ${bgColor} ${borderColor} ${textColor}`;
            
            // Auto-hide after 3 seconds
            clearTimeout(messageBox.hideTimeout);
            messageBox.hideTimeout = setTimeout(() => {
                messageBox.classList.add('hidden');
            }, 3000);
            messageBox.classList.remove('hidden');
        }

        function getReadableEventName(key) {
            switch(key) {
                case 'default_event_data': return 'Default / Offline Event';
                case 'inactivity_event_data': return 'Inactivity Event';
                case 'random_tip_event_data': return 'Random Tips Event';
                case 'time_of_day_event_data': return 'Time of Day Event';
                default: return 'Event';
            }
        }

        // --- Configuration Management ---

        /**
         * Loads configuration from localStorage based on current key.
         */
        function loadConfiguration() {
            const storedConfig = localStorage.getItem(currentSelectedKey);

            try {
                if (storedConfig) {
                    currentConfigData = JSON.parse(storedConfig);
                } else {
                    // Initialize if empty
                    currentConfigData = getInitialConfigStructure();
                }

                // Validation fix: ensure structure is correct if it was somehow corrupted or empty
                if (currentSelectedKey === KEY_TIME_OF_DAY) {
                    if (Array.isArray(currentConfigData) || !currentConfigData.morning) {
                        currentConfigData = getInitialConfigStructure();
                    }
                } else {
                    if (!Array.isArray(currentConfigData)) {
                        currentConfigData = [];
                    }
                }

            } catch (e) {
                console.error("Error parsing stored configuration", e);
                currentConfigData = getInitialConfigStructure();
            }

            renderMessageSets();
            updatePreview();
        }

        function getInitialConfigStructure() {
            if (currentSelectedKey === KEY_TIME_OF_DAY) {
                return {
                    morning: [],
                    afternoon: [],
                    evening: [],
                    night: []
                };
            }
            return [];
        }

        /**
         * Returns the active array array we are currently editing.
         * For standard events, it's the root array.
         * For TimeOfDay, it's the specific period array.
         */
        function getActiveArray() {
            if (currentSelectedKey === KEY_TIME_OF_DAY) {
                if (!currentConfigData[currentTimePeriod]) {
                    currentConfigData[currentTimePeriod] = [];
                }
                return currentConfigData[currentTimePeriod];
            }
            return currentConfigData;
        }

        /**
         * Saves currentConfigData to localStorage.
         */
        function saveConfiguration() {
            try {
                localStorage.setItem(currentSelectedKey, JSON.stringify(currentConfigData));
            } catch (e) {
                console.error("Error saving configuration:", e);
                showMessage("Failed to save configuration.", "error");
            }
        }

        // --- Message Set Management ---

        function addMessageSet() {
            const activeArray = getActiveArray();
            activeArray.push({
                texts: ["New message text"],
                src: "",
                position: "bottom-right",
                size: "medium"
            });
            saveConfiguration(); 
            renderMessageSets();
            updatePreview();
            
            // Scroll to bottom
            const lastItem = messageSetsContainer.lastElementChild;
            if (lastItem) {
                lastItem.scrollIntoView({ behavior: 'smooth', block: 'end' });
            }
        }

        function removeMessageSet(index) {
            const activeArray = getActiveArray();
            activeArray.splice(index, 1);
            saveConfiguration();
            renderMessageSets();
            updatePreview();
        }

        function renderMessageSets() {
            messageSetsContainer.innerHTML = '';
            
            const activeArray = getActiveArray();
            noMessageSetsMessage.classList.toggle('hidden', activeArray.length > 0);

            activeArray.forEach((messageSet, index) => {
                const messageSetDiv = document.createElement('div');
                messageSetDiv.className = 'message-set-item p-3 border border-gray-300 bg-gray-50 rounded shadow-sm hover:shadow-md transition duration-150';
                messageSetDiv.setAttribute('tabindex', '0');

                messageSetDiv.innerHTML = `
                    <div class="flex justify-between items-center mb-3 border-b pb-2">
                        <h3 class="text-sm font-semibold text-blue-700">Message Set ${index + 1}</h3>
                        <button class="remove-message-set-btn text-red-500 hover:text-red-700 transition"
                                data-index="${index}" title="Remove">X</button>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium mb-1">Texts (comma-separated):</label>
                            <textarea id="texts-${index}" rows="3"
                                class="w-full p-2 border border-gray-300 rounded text-sm bg-white resize-y focus:ring-blue-500 focus:border-blue-500"
                                >${messageSet.texts.join(', ')}</textarea>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-xs font-medium mb-1">Image URL:</label>
                            <input type="url" id="src-${index}" value="${messageSet.src}"
                                class="w-full p-2 border border-gray-300 rounded text-sm bg-white focus:ring-blue-500 focus:border-blue-500"
                                placeholder="Optional image link">
                        </div>
                        <div>
                            <label class="block text-xs font-medium mb-1">Position:</label>
                            <select id="position-${index}" class="w-full p-2 border border-gray-300 rounded text-sm bg-white focus:ring-blue-500 focus:border-blue-500">
                                <option value="bottom-left" ${messageSet.position === 'bottom-left' ? 'selected' : ''}>Bottom Left</option>
                                <option value="bottom-right" ${messageSet.position === 'bottom-right' ? 'selected' : ''}>Bottom Right</option>
                                <option value="top-left" ${messageSet.position === 'top-left' ? 'selected' : ''}>Top Left</option>
                                <option value="top-right" ${messageSet.position === 'top-right' ? 'selected' : ''}>Top Right</option>
                                <option value="center" ${messageSet.position === 'center' ? 'selected' : ''}>Center</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-medium mb-1">Size:</label>
                            <select id="size-${index}" class="w-full p-2 border border-gray-300 rounded text-sm bg-white focus:ring-blue-500 focus:border-blue-500">
                                <option value="small" ${messageSet.size === 'small' ? 'selected' : ''}>Small</option>
                                <option value="medium" ${messageSet.size === 'medium' ? 'selected' : ''}>Medium</option>
                                <option value="large" ${messageSet.size === 'large' ? 'selected' : ''}>Large</option>
                            </select>
                        </div>
                    </div>
                `;
                messageSetsContainer.appendChild(messageSetDiv);

                // --- Event Listeners for Inputs ---
                const textsInput = document.getElementById(`texts-${index}`);
                const srcInput = document.getElementById(`src-${index}`);
                const posInput = document.getElementById(`position-${index}`);
                const sizeInput = document.getElementById(`size-${index}`);

                textsInput.addEventListener('input', (e) => {
                    messageSet.texts = e.target.value.split(',').map(text => text.trim()).filter(text => text !== '');
                    saveConfiguration();
                    updatePreview(messageSet);
                });

                srcInput.addEventListener('input', (e) => {
                    messageSet.src = e.target.value;
                    saveConfiguration();
                    updatePreview(messageSet);
                });

                posInput.addEventListener('change', (e) => {
                    messageSet.position = e.target.value;
                    saveConfiguration();
                    updatePreview(messageSet);
                });

                sizeInput.addEventListener('change', (e) => {
                    messageSet.size = e.target.value;
                    saveConfiguration();
                    updatePreview(messageSet);
                });

                // Remove Listener
                messageSetDiv.querySelector('.remove-message-set-btn').addEventListener('click', (e) => {
                    removeMessageSet(index);
                });

                // Preview Handlers
                const previewHandler = () => updatePreview(messageSet);
                const revertHandler = () => updatePreview(); // Reverts to first item

                messageSetDiv.addEventListener('mouseenter', previewHandler);
                messageSetDiv.addEventListener('mouseleave', revertHandler);
                messageSetDiv.addEventListener('focusin', previewHandler);
                messageSetDiv.addEventListener('focusout', revertHandler);
            });
        }

        // --- Preview Logic ---

        function updatePreview(messageSetToPreview = null) {
            rightColumnContent.innerHTML = ''; 

            let messageSetToUse = null;
            const activeArray = getActiveArray();

            if (messageSetToPreview) {
                messageSetToUse = messageSetToPreview;
            } else if (activeArray.length > 0) {
                messageSetToUse = activeArray[0]; 
            }
            
            if (!messageSetToUse) {
                rightColumnContent.innerHTML = `
                    <div class="text-lg font-bold mb-2">Event Configuration Preview</div>
                    <div class="text-gray-500 text-center text-sm">
                        ${configEditorPage.classList.contains('hidden') 
                            ? "Select an event type."
                            : (currentSelectedKey === KEY_TIME_OF_DAY 
                                ? `No messages for ${currentTimePeriod}. Add one.`
                                : "No message sets configured.")
                        }
                    </div>
                `;
                return;
            }

            const textsToDisplay = messageSetToUse.texts.length > 0 ?
                                   messageSetToUse.texts[messageSetToUse.texts.length - 1] :
                                   'No text provided.';
            
            const imageUrl = messageSetToUse.src || PLACEHOLDER_IMAGE_URL;
            
            const positionClasses = {
                'bottom-left': 'absolute bottom-0 left-0',
                'bottom-right': 'absolute bottom-0 right-0',
                'top-left': 'absolute top-0 left-0',
                'top-right': 'absolute top-0 right-0',
                'center': 'absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2'
            };

            const sizeClasses = {
                'small': 'w-32',
                'medium': 'w-48',
                'large': 'w-64'
            };

            const previewBlock = document.createElement('div');
            previewBlock.className = `${positionClasses[messageSetToUse.position] || positionClasses['bottom-right']} ${sizeClasses[messageSetToUse.size] || sizeClasses['medium']}
                                      flex flex-col gap-1 max-w-[90%] text-center p-2 rounded shadow-md border border-gray-200 bg-white text-gray-800`;

            if (imageUrl) {
                const img = document.createElement('img');
                img.src = imageUrl;
                img.alt = 'Event Image';
                img.onerror = () => { img.src = PLACEHOLDER_IMAGE_URL; };
                img.className = 'max-w-full h-auto rounded object-cover w-full';
                previewBlock.appendChild(img);
            }

            const textParagraph = document.createElement('p');
            textParagraph.textContent = textsToDisplay;
            textParagraph.className = 'text-xs pt-1 font-medium';
            previewBlock.appendChild(textParagraph);

            rightColumnContent.appendChild(previewBlock);
        }

        // --- Upload / Download ---

        function downloadConfiguration() {
            saveConfiguration(); // Ensure latest state
            const filename = `${currentSelectedKey}.json`;
            const dataStr = JSON.stringify(currentConfigData, null, 2);
            const blob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            showMessage(`Downloaded ${filename}`, "success");
        }

        function handleUpload(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const uploadedConfig = JSON.parse(e.target.result);
                    
                    // Basic validation based on current key
                    if (currentSelectedKey === KEY_TIME_OF_DAY) {
                        if (!uploadedConfig.morning) throw new Error("Missing 'morning' key in Time of Day config.");
                    } else {
                        if (!Array.isArray(uploadedConfig)) throw new Error("Config must be an array.");
                    }

                    currentConfigData = uploadedConfig;
                    saveConfiguration();
                    renderMessageSets();
                    updatePreview();
                    showMessage(`Loaded config for ${getReadableEventName(currentSelectedKey)}.`, "success");

                } catch (error) {
                    console.error("File upload failed:", error);
                    showMessage(`Invalid file: ${error.message}`, "error");
                }
            };
            reader.readAsText(file);
        }

        // --- Navigation & Initialization ---

        function showPage(pageName) {
            if (pageName === 'selection') {
                eventSelectionPage.classList.remove('hidden');
                configEditorPage.classList.add('hidden');
                backButton.classList.add('hidden');
                appTitle.textContent = 'Event Configuration Editor';
            } else { 
                eventSelectionPage.classList.add('hidden');
                configEditorPage.classList.remove('hidden');
                backButton.classList.remove('hidden');
                appTitle.textContent = `Editing: ${getReadableEventName(currentSelectedKey)}`;
                
                // Show/Hide Time of Day Selector
                if (currentSelectedKey === KEY_TIME_OF_DAY) {
                    timeOfDaySelectorSection.classList.remove('hidden');
                } else {
                    timeOfDaySelectorSection.classList.add('hidden');
                }
                
                loadConfiguration(); 
            }
            updatePreview();
        }

        function setupEventListeners() {
            // Radio Buttons: Update currentKey
            selectEventTypeRadios.forEach(radio => {
                radio.addEventListener('change', (e) => {
                    currentSelectedKey = e.target.value;
                });
            });

            // Navigation
            goToEditorBtn.addEventListener('click', () => showPage('editor'));
            backButton.addEventListener('click', () => showPage('selection'));

            // Time Period Selector
            timePeriodSelect.addEventListener('change', (e) => {
                currentTimePeriod = e.target.value;
                renderMessageSets(); // Re-render lists for the new time period
                updatePreview();
            });

            // Add Button
            addMessageSetBtn.addEventListener('click', addMessageSet);

            // File Ops
            downloadOption.addEventListener('click', downloadConfiguration);
            uploadOption.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleUpload);
            
            showPage('selection');
        }

        window.onload = setupEventListeners;
    </script>
</body>
</html>